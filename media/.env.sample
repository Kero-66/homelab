# media/.env.sample
# Copy to .env and fill real values. Keep secrets out of git.

# General UID/GID and Timezone
TZ=Australia/Brisbane
PUID=1000
PGID=1000
ENABLE_LOCALTIME_MOUNT=false

# Data and config directories
CONFIG_DIR=.
DATA_DIR=/mnt/wd_media/homelab-data

# Network subnet and static IPs for services
SERVARR_SUBNET=172.39.0.0/24
IP_QBITTORRENT=172.39.0.12
IP_SONARR=172.39.0.3
IP_RADARR=172.39.0.4
IP_LIDARR=172.39.0.5
IP_BAZARR=172.39.0.6
IP_SABNZBD=172.39.0.24
IP_PROWLARR=172.39.0.8
IP_FLARESOLVERR=172.39.0.9
IP_JELLYFIN=172.39.0.10

# Ports
QBIT_WEBUI_PORT=8080
SABNZBD_PORT=8085
PROWLARR_PORT=9696
SONARR_PORT=8989
RADARR_PORT=7878
LIDARR_PORT=8686
BAZARR_PORT=6767

# VPN & WireGuard
VPN_SERVICE_PROVIDER=airvpn
VPN_TYPE=wireguard
FIREWALL_VPN_INPUT_PORTS=REPLACE_ME
WIREGUARD_PUBLIC_KEY=REPLACE_ME
WIREGUARD_PRIVATE_KEY=REPLACE_ME
WIREGUARD_PRESHARED_KEY=REPLACE_ME
WIREGUARD_ADDRESSES=REPLACE_ME

# API keys (replace with your real keys in local .env)
SABNZBD_API_KEY=REPLACE_ME
JELLYFIN_API_KEY=REPLACE_ME
JELLYSEERR_API_KEY=REPLACE_ME
PROWLARR_API_KEY=REPLACE_ME
SONARR_API_KEY=REPLACE_ME

# Credentials (replace in local .env)
MYLAR3_USER=REPLACE_ME
MYLAR3_PASS=REPLACE_ME
OMBI_ADMIN_USER=REPLACE_ME
OMBI_ADMIN_PASS=REPLACE_ME
SCENENZB_API_KEY=
